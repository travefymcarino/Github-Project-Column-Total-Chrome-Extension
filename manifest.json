{
  "manifest_version": 3,
  "name": "Github Project Column Total",
  "version": "1.0",
  "description": "See the total of an integer column in github projects beta",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://github.com/*/*"
  ],
  "background": {
      "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "Calculate Total!"
  },
  "icons": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128":"images/icon.png"
  }
}
